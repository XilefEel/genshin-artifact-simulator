{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "FastAPI Dev Server",
      "type": "shell",
      "command": "fastapi",
      "args": ["dev", "main.py"],
      "options": {
        "cwd": "backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Frontend Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": "build"
    }
  ]
}
